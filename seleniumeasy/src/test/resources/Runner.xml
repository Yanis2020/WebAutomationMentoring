<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Selenium Test Suite" parallel="false">

    <parameter name="cloud" value="false"/>
    <parameter name="envName" value="browserstack"/>
    <parameter name="browser" value="Chrome"/>
    <parameter name="browserVersion" value="85.0"/>
    <parameter name="url" value="https://www.seleniumeasy.com/"/>


    <parameter name="platform" value="windows"/>

    <test name="Automation tests">
        <classes>
            <class name="com.seleniumeasy.test.HomePageValidation"/>
            <class name="com.seleniumeasy.test.ClickSeleniumPageValidation"/>
            <class name="com.seleniumeasy.test.PracticePageValidation"/>
        </classes>
    </test>
</suite>
